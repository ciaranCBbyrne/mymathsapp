<!DOCTYPE html>
<html>
<head>
  <title>Mymathsapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= nav_bar brand: "LearningZone" do %>
	<%= menu_group do %>
		<%= menu_divider %>
		<%= menu_item "Start Test", exam_path %>
		<%= menu_item "Previous Questions", questions_path %>
	<% end %>
	<%= menu_group pull: :right do %>
		<% if current_user %>
			<%= menu_item current_user.email %>
			<%= menu_item "Log out", destroy_user_session_path, :method => :delete %>
		<% else %>
			<%= menu_item "Log in", new_user_session_path %>
			<%= menu_item "Sign up", "/users/sign_up" %>
		<% end %>
	<% end %>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<%= yield %>

</body>
</html>
